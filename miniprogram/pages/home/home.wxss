/* 公告区域样式 */
.announcement {
  background-color: #e8f4ff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin: 24rpx;
  display: flex;
  align-items: center;
}

.announcement-icon {
  flex-shrink: 0;
  margin-right: 16rpx;
}

.announcement-container {
  flex: 1;
  overflow: hidden;
  position: relative;
  height: 40rpx;
  display: flex;
}

.announcement-text {
  white-space: nowrap;
  color: #333;
  font-size: 28rpx;
  animation: marquee 15s linear infinite;
  padding-right: 50rpx;
  /* 两段文本之间的间距 */
}

.announcement-text-duplicate {
  animation-delay: 7.5s;
  /* 设置为总动画时间的一半 */
}

@keyframes marquee {
  0% {
    transform: translateX(0%);
  }

  100% {
    transform: translateX(-100%);
  }
}

/* 分享按钮样式 */
.share-btn {
  font-size: inherit;
  font-weight: normal;
  line-height: normal;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: inherit;
  background: #fff;
}

.share-btn::after {
  border: none;
}

/* 输入框 */
.custom-class {
  border: 1rpx solid #6a6a6b;
  border-radius: 10rpx;
  margin: 10px auto 40rpx;
}

.video-tit {
  color: #6a6a6b;
}

/* 结果展示区域样式 */
.result-area {
  margin: 30rpx 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.video-preview-container {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.video-preview {
  width: 100%;
  height: 400rpx;
  background-color: #f5f5f5;
}

.video-duration {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

/* 图文展示样式 */
.pics-container {
  width: 100%;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 20rpx;
}
.button-group t-button {
  flex: 1;
}

.pics-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  word-break: break-all;
}

.pics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.pic-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pic-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  border-radius: 12rpx 12rpx 0 0;
}

.pic-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 12rpx;
  background-color: #fff;
}

.pic-actions t-button {
  width: 100%;
}

