/* 会员详情页样式 */
.container {
  padding: 0 0 120rpx 0;
  background-color: #f5f7fa;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-button {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.vip-card {
  background: linear-gradient(135deg, #0052d9, #00379b);
  color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 82, 217, 0.3);
}

.vip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.vip-title {
  font-weight: bold;
  font-size: 40rpx;
}

.vip-info {
  margin-bottom: 30rpx;
}

.vip-status {
  font-size: 28rpx;
  opacity: 0.8;
}

.vip-expire {
  font-size: 24rpx;
  opacity: 0.7;
  margin-top: 10rpx;
}

.vip-benefits {
  display: flex;
  justify-content: space-between;
}

.vip-benefit {
  text-align: center;
  font-size: 24rpx;
}

.vip-benefit-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.plan-container {
  margin: 30rpx;
}

.plan-title {
  font-weight: bold;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.plan-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.plan-option {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid transparent;
  position: relative;
}

.plan-option.selected {
  border-color: #0052d9;
}

.plan-option.best-value::after {
  content: "最优惠";
  position: absolute;
  top: -20rpx;
  right: 20rpx;
  background-color: #ff9800;
  color: white;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.plan-name {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.plan-price {
  color: #0052d9;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.plan-original {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}

.features-container {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.features-title {
  font-weight: bold;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.feature-icon {
  color: #0052d9;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
}