.container {
    padding-bottom: 40rpx;
  }
  
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    padding: 20rpx 0;
    background-color: #fff;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .back-icon {
    position: absolute;
    left: 20rpx;
  }
  
  .tutorial-list {
    padding: 30rpx 20rpx;
  }
  
  .tutorial-card {
    background-color: #fff;
    border-radius: 12rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }
  
  .tutorial-title {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background-color: #f0f9ff;
    font-weight: bold;
  }
  
  .tutorial-number {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    background-color: #0052d9;
    color: #fff;
    margin-right: 20rpx;
    font-size: 28rpx;
  }
  
  .tutorial-content {
    padding: 20rpx;
  }
  
  .tutorial-text {
    margin-bottom: 20rpx;
    line-height: 1.6;
  }
  
  .tutorial-image {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200rpx;
    background-color: #f5f5f5;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
  }
  
  .tutorial-tip {
    display: flex;
    align-items: flex-start;
    padding: 16rpx;
    background-color: #f0f9ff;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #666;
  }
  
  .tip-text {
    margin-left: 10rpx;
    flex: 1;
  }
  
  .faq-section {
    padding: 0 20rpx;
    margin-top: 40rpx;
  }
  
  .faq-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .faq-answer {
    padding: 20rpx 0;
    color: #666;
    line-height: 1.6;
  }